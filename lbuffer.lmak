--工程名字
PROJECT_NAME = "lbuffer"

--目标名字
TARGET_NAME = "lbuffer"

--工程类型：static/dynamic/exe
PROJECT_TYPE = "dynamic"

--标准库版本
---std=gnu99/-std=c++11/-std=c++14
STDC = "-std=gnu99"

--需要的FLAGS
FLAGS = {
	"Wno-sign-compare"
}

--需要的include目录
INCLUDES = {
	"../lua/lua"
}

--LINUX需要定义的选项
DEFINES = {
	"LBUFF_EXPORT"
}

--需要连接的库文件
LIBS = {
	"lua"
}

--依赖项目
DEPS = {
	"lualib"
}